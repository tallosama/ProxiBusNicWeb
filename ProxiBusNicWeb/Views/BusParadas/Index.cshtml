@model IEnumerable<ProxiBusNicWeb.Models.BusParada>

@{
    ViewBag.Title = "Index";
}

<h2>Buses con paradas</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table id ="Tabla" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Parada.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bus.NumeroRuta)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
   

    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Parada.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bus.NumeroRuta)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detallar", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </tbody>

 

</table>

