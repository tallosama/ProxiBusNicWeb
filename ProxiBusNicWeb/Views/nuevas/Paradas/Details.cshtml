@model ProxiBusNicWeb.Models.Parada

@{
    ViewBag.Title = "Detalle";
}

<h2>Detalle</h2>

<div>
    <h4>Parada</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Descripcion")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            @Html.Label("Alias")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Alias)
        </dd>

        <dt>
            Foto capturada
        </dt>

        <dd>

            @if (Model.FotoParada != null)
            {

                var imagen = String.Format("data:Img/png;base64,{0}", Convert.ToBase64String(Model.FotoParada));

                <img id="original" src="@imagen" width="200" height="200">

            }
            @if (Model.FotoParada == null)
            {
                <img id="original" src="~/Img/Parada.png" width="200" height="200">
            }
        </dd>


        <dt>
            @Html.Label("Estado")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

        <dt>
            @Html.Label("Longitud")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Longitud)
        </dd>

        <dt>
            @Html.Label("Latitud")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Latitud)
        </dd>

        <dt>
            @Html.Label("Fecha De Creacion")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>

        <dt>
            @Html.Label("Usuario Creacion")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UsuarioCreacion)
        </dd>

        <dt>
            @Html.Label("Fecha De Modificacion")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaModificacion)
        </dd>

        <dt>
            @Html.Label("Usuario Modificacion")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UsuarioModificacion)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Volver a la lista", "Index")
</p>
