@model IEnumerable<ProxiBusNicWeb.Models.Bus>

@{
    ViewBag.Title = "Index";
}

<h2>Buses</h2>

<p>
    @if (!User.IsInRole("UsuarioAnonimo"))
    {
        @Html.ActionLink("Crear", "Create")
    }
    </p>
<table id="Tabla" class="table">

    <thead>
        <tr>
            <th>
                @Html.Label("Número de ruta")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.Label("Foto de bus")
            </th>
            <th>
                @Html.Label("Fecha de creación")
            </th>
            @if (!User.IsInRole("UsuarioAnonimo"))
            {
                <th>
                    @Html.Label("Creado por")
                </th>
            }
            <th>
                @Html.Label("Fecha de modificación")
            </th>
            @if (!User.IsInRole("UsuarioAnonimo"))
            {
                <th>
                    @Html.Label("Modificado por")
                </th>
          
                    <th>Acciones</th>
                }
            </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroRuta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @if (item.FotoBus != null)
                {
                    <img id="original" src="data:Img/png;base64,@Convert.ToBase64String(item.FotoBus)" width="80" height="80">
                }

                @if (item.FotoBus == null)
                {
                    <img id="original" src="~/Img/Ruta.png" width="80" height="80">
                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            @if (!User.IsInRole("UsuarioAnonimo"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioCreacion)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.FechaModificacion)
            </td>
            @if (!User.IsInRole("UsuarioAnonimo"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioModificacion)
                </td>
         
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) <br>
                        @Html.ActionLink("Detallar", "Details", new { id = item.Id }) <br>
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                    </td>
                }

            </tr>
        }

    </tbody>




</table>

<script src="/Content/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>
<script src="~/Content/vendor/datatables/dataTables.responsive.min.js"></script>
<script src="~/Content/vendor/datatables/responsive.bootstrap4.min.js"></script>
<script src="~/Content/vendor/datatables/DataTables.js"></script>
 