@using ProxiBusNicWeb.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}


<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">

                <!-- Nested Row within Card Body -->
                <div class="row">

                    <div class="mx-auto">


                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">¡Hola de nuevo!</h1>
                            </div>

                            <section id="loginForm">
                                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <h4>Utilice su cuenta para iniciar sesión.</h4>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">

                                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Correo", @class = "form-control form-control-user" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })


                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(m => m.Password, new { placeholder = "Contraseña", @class = "form-control form-control-user" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <div class="checkbox">
                                                @Html.CheckBoxFor(m => m.RememberMe)
                                                @Html.LabelFor(m => m.RememberMe)
                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">

                                            <input type="submit" value="Iniciar sesión" class="btn btn-primary btn-user btn-block" />
                                        </div>
                                    </div>
                                    <p>

                                    </p>

                                }
                            </section>
                            <hr>
                            <div class="text-center">
                                @Html.ActionLink("Registrarse como usuario nuevo", "Register")

                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}