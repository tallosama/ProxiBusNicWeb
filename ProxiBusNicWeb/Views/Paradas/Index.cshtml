@model IEnumerable<ProxiBusNicWeb.Models.Parada>

@{
    ViewBag.Title = "Index";
}

<h2>Paradas</h2>

<p>
    @if (!User.IsInRole("UsuarioAnonimo"))
    {
        @Html.ActionLink("Crear", "Create")
    }
</p>
<div class="table-responsive">

    <table class="table" id="Tabla">
        <thead>

            <tr>
                <th>
                    @Html.Label("Descripción")
                </th>
                <th>
                    @Html.Label("Alias")
                </th>
                <th>
                    @Html.Label("Foto de parada")
                </th>
                <th>
                    @Html.Label("Estado")
                </th>
                <th>
                    @Html.Label("Longitud")
                </th>
                <th>
                    @Html.Label("Latitud")
                </th>
                <th>
                    @Html.Label("Fecha de creacion")
                </th>
                @if (!User.IsInRole("UsuarioAnonimo"))
                {
                    <th>
                        @Html.Label("Creado por")
                    </th>
                }
                <th>
                    @Html.Label("Fecha de modificación")
                </th>
                @if (!User.IsInRole("UsuarioAnonimo"))
                {
                    <th>
                        @Html.Label("Modificado por")
                    </th>
                    <th>Acciones</th>}
                </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @if (item.Alias != null)
                    {
                        @Html.DisplayFor(modelItem => item.Alias)
                    }
                    @if (item.Alias == null)
                    {
                        @Html.Label("N/A")
                    }
                </td>
                <td>
                    @if (item.FotoParada != null)
                    {
                        <img id="original" src="data:Img/png;base64,@Convert.ToBase64String(item.FotoParada)" width="80" height="80">
                    }

                    @if (item.FotoParada == null)
                    {
                        <img id="original" src="~/Img/Parada.png" width="80" height="80">
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @if (item.Longitud != null)
                    {
                        @Html.DisplayFor(modelItem => item.Longitud)
                    }
                    @if (item.Longitud == null)
                    {
                        @Html.Label("N/A")
                    }

                </td>
                <td>
                    @if (item.Latitud == null)
                    {

                        @Html.Label("N/A")
                    }
                    @if (item.Latitud != null)
                    {

                        @Html.DisplayFor(modelItem => item.Latitud)
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaCreacion)
                </td>    @if (!User.IsInRole("UsuarioAnonimo"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.UsuarioCreacion)
                    </td>}
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaModificacion)
                    </td>
                    @if (!User.IsInRole("UsuarioAnonimo"))
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.UsuarioModificacion)
                        </td>
                        <td>


                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) <br>
                            @Html.ActionLink("Detallar", "Details", new { id = item.Id }) <br>
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })

                        </td>
                    }
                </tr>
            }
        </tbody>

    </table>
    <script src="/Content/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/vendor/datatables/dataTables.responsive.min.js"></script>
    <script src="~/Content/vendor/datatables/responsive.bootstrap4.min.js"></script>
    <script src="~/Content/vendor/datatables/DataTables.js"></script>
