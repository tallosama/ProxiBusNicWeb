@model IEnumerable<ProxiBusNicWeb.Models.Bus>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NumeroRuta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FotoBus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioCreacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaModificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioModificacion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.NumeroRuta)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Estado)
    </td>
    <td>
        @if(item.FotoBus != null) { 
        <img id="original" src="data:Img/png;base64,@Convert.ToBase64String(item.FotoBus)" width="80" height="80">
        }
        
    @if(item.FotoBus == null) { 
    <img id="original" src="~/Img/Ruta.png" width="80" height="80">
        }
    
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FechaCreacion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UsuarioCreacion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FechaModificacion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UsuarioModificacion)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
